<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CompleteOrderFragment">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <ImageView
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="50dp"
         android:src="@drawable/shoppingbags"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="주문이 완료되었습니다."
         android:textColor="@color/black"
         android:textSize="20sp"
         android:textStyle="bold"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="50dp" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="주문정보 및 배송정보는"
         android:textColor="@color/black"
         android:textSize="15sp"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="20dp"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="마이페이지에서 확인할 수 있습니다"
         android:textColor="@color/black"
         android:textSize="15sp"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"/>

     <View
         android:layout_margin="30dp"
         android:background="#45000000"
         android:layout_width="match_parent"
         android:layout_height="1dp" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="주문번호 2021013197936"
         android:textColor="@color/black"
         android:textSize="20sp"
         android:layout_gravity="center_horizontal" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="주문시간 2021.02.10 19:00"
         android:textColor="@color/black"
         android:textSize="20sp"
         android:layout_marginTop="15dp"
         android:layout_gravity="center_horizontal" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="결제금액 25900원"
         android:textColor="@color/black"
         android:textSize="20sp"
         android:layout_marginTop="15dp"
         android:layout_gravity="center_horizontal" />

     <View
         android:layout_margin="30dp"
         android:background="#45000000"
         android:layout_width="match_parent"
         android:layout_height="1dp" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal">

         <Button
             android:id="@+id/checkOrderBtn"
             android:layout_width="160dp"
             android:layout_height="55dp"
             android:text="주문내역확인"
             android:textSize="17sp"
             android:textStyle="bold"
             android:background="@drawable/buttonbackground"
             android:layout_marginLeft="35dp" />

         <Button
             android:id="@+id/continueShoppingBtn"
             android:layout_width="160dp"
             android:layout_height="55dp"
             android:text="계속쇼핑하기"
             android:textSize="17sp"
             android:textStyle="bold"
             android:textColor="@color/appusBlue"
             android:background="@drawable/btnbackground2"
             android:layout_marginLeft="25dp" />

     </LinearLayout>
 </LinearLayout>
</FrameLayout>