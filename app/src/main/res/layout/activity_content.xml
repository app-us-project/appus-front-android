<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentActivity">
    <LinearLayout
        android:id="@+id/whole_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/top_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:layout_marginHorizontal="7dp">
            <ImageView
                android:id="@+id/back_top"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_button"
                android:layout_weight="1"
                android:layout_marginTop="25dp"/>
            <TextView
                android:id="@+id/content_name_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content name"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:src="@drawable/horizonal_menu" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bot_button"
                android:background="#B5C6CD">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#ffffff">
                    <ImageView
                        android:id="@+id/content_img"
                        android:background="#B1ABAB"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:scaleType="fitCenter"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/content_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="[썬플라워]" />
                        <TextView
                            android:id="@+id/content_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="너만 바라볼꺼야 해바라기"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/content_price"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="null"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="원"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#B5C6CD"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="상품정보"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/content_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/appusBlue"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상품정보 펼쳐보기"
                        android:textSize="15dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/appusBlue"
                        android:background="@drawable/content_info_button"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#B5C6CD"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/human"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="문의하기"
                                android:textSize="20dp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="상품 및 교환, 환불 문의는"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="010-1234-5678로 전화주세요."/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#B5C6CD"/>

                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/bot_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:elevation="20dp"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/back_bot"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back_button"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"/>
                <Button
                    android:id="@+id/up_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주문하기"
                    android:textStyle="normal"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/order_round" />
            </LinearLayout>
            <!--sliding page-->
            <LinearLayout
                android:id="@+id/sliding_page"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/white_round"
                android:elevation="20dp"
                android:layout_alignParentBottom="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/bucket_round"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="left|center_vertical">
                        <TextView
                            android:id="@+id/total_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="상품명"
                            android:gravity="center_vertical|left"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical|left"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수량선택"
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:textColor="#000000"/>
                            <Button
                                android:id="@+id/min_button"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/plus_min_round_button"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:layout_marginRight="10dp"
                                android:text="-"/>
                            <TextView
                                android:id="@+id/count_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#000000"
                                android:layout_marginRight="10dp"
                                android:textSize="20dp"/>
                            <Button
                                android:id="@+id/plus_button"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/plus_min_round_button"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:text="+"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/bucket_round"
                        android:layout_margin="10dp"
                        android:gravity="left|center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 금액 : "
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:paddingLeft="10dp" />
                        <TextView
                            android:id="@+id/total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:paddingLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:paddingLeft="10dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="장바구니"
                        android:layout_margin="7dp"
                        android:textColor="@color/appusBlue"
                        android:background="@drawable/content_info_button"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="주문하기"
                        android:textColor="#ffffff"
                        android:layout_margin="7dp"
                        android:background="@drawable/order_round"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>